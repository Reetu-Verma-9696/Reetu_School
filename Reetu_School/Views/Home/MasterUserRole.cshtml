

@{
    ViewData["Title"] = "MasterUserRole";
}
<link href="~/css/jquery.datatables.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/fontawesome.min.css" integrity="sha512-B46MVOJpI6RBsdcU307elYeStF2JKT87SsHZfRSkjVi4/iZ3912zXi45X5/CBr/GbCyLx6M1GQtTKYRd52Jxgw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
 
<div class="block">
    <h6>Add User Role</h6>
    <br />
    <div class="row">
        <div class="col-md-3">
            <label>User Role<span style="color:red">*</span></label>
            <input type="text" class="form-control" id="txtUserRole" />
        </div>
        <div class="col-md-3">
            <label>Is Active<span style="color:red">*</span></label>
            <select class="form-control" id="txtisactive">
                <option>--Select--</option>
                <option value="True">True</option>
                <option value="False">False</option>
            </select>
           
        </div>
        <div class="col-md-3">
            <label>Optional Data</label>
            <input type="text" class="form-control" id="ddloptional" />
        </div>
        <div class="col-md-3">
            <button class="btn btn-success btn-sm buttons" onclick="InsertUserRole();">Submit</button>
            <button class="btn btn-info btn-sm buttons" onclick="Cancel();">Cancel</button>
        </div>

    </div>
    <hr />
    <div class="clearfix">
        <h6>User Role Details</h6>
        <div class="row">
            <table id="tablelist" class="table-bordered table-striped">
                <thead style="background-color:#98891e99;">
                    <tr>
                        <th>Sr.No</th>
                        <th>User Role</th>
                        <th>IsActive</th>
                        <th>Optional Data</th>
                        <th>EntryAt</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/projectjs/masteruserrole.js"></script>
    <script src="~/js/jquery.datatables.min.js"></script>
    <script>
      $(document).ready(function(){
            GetUserRoleDetails(0);
      });
    </script>
}