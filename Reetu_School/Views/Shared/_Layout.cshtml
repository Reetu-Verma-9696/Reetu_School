<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reetu_School</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Reetu_School.styles.css" asp-append-version="true" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

</head>
<style>
    .navbar{
        background-color:forestgreen !important;
    }

    .navbar-brand{
        color:#fff !important;
    }

    .cus-home {
        text-decoration: none;
        color: white !important;
    }

    .navbar-nav{
        justify-content: space-around;
        display: -webkit-inline-box;
    }

    .cus-home-home {
        font-weight: bold;
        background-color:forestgreen !important;
    }

    .cus-home-about {
        font-weight: bold;
        background-color: forestgreen !important;
    }

    .cus-home-contact {
        padding-right: 363px;
        font-weight: bold;
        background-color: forestgreen !important;
    }

    .navbar-inverse{
        border:none !important;
        border-radius:0px !important;
    }

    .cus-home-home {
        color: red;
        font-weight: bold;
    }

    .cus-home-about {
        color: blue;
       
    }

    .cus-home-contact {
        text-decoration: none;
    }

    .navbar-brand img {
        height: 40px;
        display: inline-block;
    }

    .navbar-nav > li {
        margin-left: 10px;
    }

    .navbar-brand{
        float: left;
        height: 0px;
        font-size: 18px;
        line-height: 20px;

    }
    .navbar-collapse{
        margin-top: -3%;
    }
    .container-fluid > .navbar-collapse, .container-fluid > .navbar-header, .container > .navbar-collapse, .container > .navbar-header {
        margin-right:auto !important;
        margin-left:auto!important;
    }
    body{
        overflow-x:hidden;
    }
</style>
<body>
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                    </a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active">
                        <a href="/Home/Index" class="cus-home cus-home-home">Home</a></li>
                        <li><a href="/Home/About" class="cus-home cus-home-about">About</a></li>
                        <li><a href="/Home/Contact" class="cus-home cus-home-contact">ContactUs</a></li>
                        <li><a href="/Account/SignUp"><span class="glyphicon glyphicon-user cus-home"></span> Sign Up</a></li>
                        <li><a href="/Account/Login"><span class="glyphicon glyphicon-log-in cus-home"></span> Login</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
           
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
  
    <footer class="border-top footer text-muted">
        <div class="container">
            
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
  @*  <script src="~/content/css/cdnjs/jquery-3.7.1.min.js"></script>*@
    @RenderSection("Scripts", required: false)
    <script src="~/js/jquery-migrate-3.3.2.min.js"></script>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/sweetalert2@10.js"></script>
</body>
</html>
