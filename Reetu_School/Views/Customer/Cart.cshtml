        @@keyframes removeItem {
            from { opacity: 1; transform: translateX(0); }
            to { opacity: 0; transform: translateX(-100%); }
        }

        .cart-item.removing {
            animation: removeItem 0.5s forwards;
        }
</style>
<div class="container">
    <div class="cart">
        <div class="cart-item">
